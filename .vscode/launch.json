{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/@nrwl/cli/bin/nx",
        "--runInBand",
        "test",
        "${input:variableID}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "variableID",
      "description": "What project do you need to debug?",
      "options": [
        "cutcal",
        "common-ui",
        "food-review",
        "api-interfaces",
        "ng-testing",
        "nutrition",
        "convert-units",
        "cutcal-analyze",
        "cutcal-business",
        "cutcal-calendar",
        "cutcal-fallback",
        "cutcal-food-recipe",
        "cutcal-footer",
        "cutcal-grocery-pantry",
        "cutcal-landing",
        "cutcal-legal",
        "cutcal-meal-ingredient",
        "cutcal-nutrient",
        "cutcal-profile",
        "cutcal-recipe-builder",
        "cutcal-support",
        "common",
        "timpicker"
      ],
      "default": "cutcal"
    }
  ]
}
