{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/@nrwl/cli/bin/nx",
        "--runInBand",
        "test",
        "${input:variableID}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "variableID",
      "description": "What project do you need to debug?",
      "options": [
        "cutcal",
        "common-ui",
        "food-review",
        "api-interfaces",
        "cc-ng-core",
        "drag-n-drop",
        "ng-testing",
        "nutrition"
      ],
      "default": "cutcal"
    }
  ]
}
